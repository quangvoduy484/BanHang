@model WebSiteBanHang.Models.LOAIPHONG

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_admin.cshtml";
}
<style>
    * {
        font-size: 14px;
    }

    label {
        font-weight: initial;
    }
    h2, h4 {
        padding-left: 10px;
    }

    .QuayLai {
        padding-left: 10px;
        padding-right: 10px;
    }
</style>
<h2>THÊM MỚI</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Loại phòng</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group QuayLai">
            @Html.LabelFor(model => model.TenLoaiPhong,"Tên loại phòng", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.TenLoaiPhong, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenLoaiPhong, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group QuayLai">
            @Html.LabelFor(model => model.HinhAnh,"Hình ảnh", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.HinhAnh, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.HinhAnh, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group QuayLai">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm mới" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div class="QuayLai">
    @Html.ActionLink("<< Quay lại danh sách", "Index")
</div>
