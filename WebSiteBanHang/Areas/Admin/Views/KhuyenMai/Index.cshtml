@model IEnumerable<WebSiteBanHang.Models.KHUYENMAI>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_admin.cshtml";
}
<style>
    .table .middle {
        vertical-align: middle;
    }

    .table-admin {
        border: 1px solid #ddd;
    }

        .table-admin td, .table-admin th {
            border: 1px solid #ddd !important;
        }
    .Bang{
        background:none;
        border-top:none;
    }
    h2
    {
        color:blue;
        text-align:center;
    }
</style>


<div style="padding-bottom: 10px; padding-left: 15px;">
    <h3>DANH SÁCH KHUYẾN MÃI</h3>
    <a class="btn btn-success" href="/Admin/KhuyenMai/Create">Thêm mới</a>
</div>
<div class="col-md-12">
    <div class="box Bang">
        <table id="KhuyenMai" class="table table-bordered table-striped table-admin" role="grid">
            <thead>
                <tr>
                    <th>
                        Tên khuyến mãi
                    </th>
                    <th>
                        Ngày bắt đầu
                    </th>
                    <th>
                        Ngày kết thúc
                    </th>
                    <th>
                        Gía trị khuyến mãi
                    </th>
                    <th>
                        Chức năng
                    </th>
                </tr>
            </thead>
            <tbody class="tbody"></tbody>
        </table>
    </div>
</div>
<script type="text/javascript">
    //Paging
    $(document).ready(function () {
        loadGridView();

        //config toastr
        toastr.options = {
            "closeButton": true,
            "debug": false,
            "newestOnTop": false,
            "progressBar": false,
            "positionClass": "toast-top-right",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "2000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        };
    });

    function loadGridView() {
        $('#KhuyenMai').DataTable({
            serverSide: true,
            ajax: {
                url: "/Admin/KhuyenMai/GetAll",
                type: "POST",
                dataType: "JSON",
            },
            language: {
                lengthMenu: "Hiển thị _MENU_ mục",
                zeroRecords: "Không tìm thấy ",
                info: "Hiển thị trang _PAGE_ đến _PAGES_ của _MAX_ mục",
                infoEmpty: "Không có dữ liệu",
                infoFiltered: "(lọc từ _MAX_ tổng mục)",
                search: "Tìm kiếm",
                searchPlaceholder: "Search...",
            },
            columns: [
                { title: "Tên khuyến mãi", data: "TenKhuyenMai" },
                {
                    title: "Ngày bắt đầu",
                    data: "NgayBatDau",
                    render: function (data, type, full, meta) {
                        if (data) {
                            data = new Date(parseInt(data.replace("/Date(", "").replace(")/", ""), 10));
                            var dd = data.getDate();
                            var mm = data.getMonth() + 1; //January is 0!
                            var yyyy = data.getFullYear();
                            if (dd < 10) {
                                dd = '0' + dd;
                            }
                            if (mm < 10) {
                                mm = '0' + mm;
                            }
                            var formatted_date = dd + '/' + mm + '/' + yyyy;
                            return formatted_date;
                        }
                        return ''
                    }
                },
                {
                    title: "Ngày kết thúc",
                    data: "NgayKetThuc",
                    render: function (data, type, full, meta) {
                        if (data) {
                            data = new Date(parseInt(data.replace("/Date(", "").replace(")/", ""), 10));
                            var dd = data.getDate();
                            var mm = data.getMonth() + 1; //January is 0!
                            var yyyy = data.getFullYear();
                            if (dd < 10) {
                                dd = '0' + dd;
                            }
                            if (mm < 10) {
                                mm = '0' + mm;
                            }
                            var formatted_date = dd + '/' + mm + '/' + yyyy;
                            return formatted_date;
                        }
                        return ''
                    }
                },
                { title: "Gía trị khuyến mãi", data: "GiaTriKhuyenMai" },
                {
                    title: "Chức năng",
                    data: "Id_KhuyenMai",
                    searchable: false,
                    sortable: false,
                    render: function (data, type, full, meta) {
                        return `<div>
                                     <a class="btn btn-primary" href="/Admin/KhuyenMai/Edit/${data}">Sửa</a>
                                    <button class="btn btn-danger" onclick="xoaKM(${data})">Xoá</button>
                                </div> `
                    }
                }
            ],

        });
    }
    //Xoá khuyến mãi
    function xoaKM(maKM) {
        if (window.confirm("Bạn có muốn xoá không?")) { //ok
            $.ajax({
                method: "POST",
                url: "/Admin/KhuyenMai/Delete/" + maKM,
                contentType: 'application/json',
                success: function (data) {
                    if (data.StatusCode === 200) {
                        var a = "#data_" + maKM;
                        $(a).remove();
                        toastr.success("Xóa thành công");
                    } else {
                        toastr.error(data.Message);
                    }
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    toastr.error(rrorThrown);
                }
            });

        }
    }
</script>

