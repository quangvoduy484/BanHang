                            @Html.EditorFor(model => model.GiaSP, new { htmlAttributes = new { @class = "form-control", @id="giaSP" } })
                            @Html.ValidationMessageFor(model => model.GiaSP, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-1">
                            <input type="button" style="float:right" id="gb" data-toggle="modal"
