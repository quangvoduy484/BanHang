            @Html.DropDownList("Id_LoaiSanPham", (IEnumerable<SelectListItem>)ViewBag.LoaiSP, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.TenLoai, "", new { @class = "text-danger" })
        </div>
    </div>


