@model WebSiteBanHang.ViewModel.Customer

@{
    ViewBag.Title = "fillFormCustomer";
    Layout = "~/Views/Shared/TrangChu.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal" style="width:955px;margin:auto; border: 1px solid rgba(0,0,0,.125);border-radius: .25rem;padding:15px;background-color: #f8f9fa!important;position:relative;top:20px">
    <h4 style="text-align:center">THÔNG TIN KHÁCH HÀNG</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="form-group">
        <label class="control-label col-md-2">Tên*:</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.TenKhachHang, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenKhachHang, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Số điện thoại*:</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.SoDienThoai, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SoDienThoai, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Email*:</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Địa chỉ:</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
        </div>
    </div>

    @if (ViewBag.show == true)
    {
        <div class="form-group">
            <label class="col-md-2" for="checkAccumulated"> Dùng điểm tích lũy</label>
            <div class="col-md-10">
                <input type="checkbox" name="checkAccumulated" value="false" />
            </div>
        </div>
    }
    <div class="form-group" style="left:220px;position:relative">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Xác nhận đơn hàng" class="btn btn-success" />
        </div>
    </div>
</div>
}


