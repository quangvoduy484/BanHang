@model WebSiteBanHang.Models.DIACHI

<div class="modal-dialog ">
    <div class="modal-content">
        <div class="modal-header " style=" border: 1px solid rgba(0,0,0,.125);border-radius: .25rem;">
            <span style="font-size:24px">Thêm địa chỉ mới</span>
            <button data-dismiss="modal" class="close"><span>&times;</span></button>

        </div>
        @using (Html.BeginForm("addAdressPartial", "Address", FormMethod.Post))
        {
            <div class="modal-body form-horizontal">

                @Html.AntiForgeryToken()

                <div class="form-horizontal">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label class="control-label col-md-3">Tên*:</label>
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.TenKhachHang, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3">Địa chỉ*:</label>
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3">Số điện thoại*:</label>
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.SoDienThoai, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <input type="submit" value="Lưu" class="btn btn-primary" />
                <button class="btn btn-default" data-dismiss="modal">HỦY</button>
            </div>
        }

        </div>

</div>



